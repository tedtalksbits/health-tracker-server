{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "commonjs",                            
    "moduleResolution": "node",                     
    "sourceMap": true,                              
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                 
    "noImplicitAny": true,                          
    "skipLibCheck": true,                                
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
